        "nb_model = MultinomialNB()\n",
        "nb_model.fit(X_train_tfidf, y_train)\n",
        "y_pred_nb = nb_model.predict(X_test_tfidf)\n",
        "\n",
        "print(\"Naïve Bayes Performance:\")\n",
        "print(classification_report(y_test, y_pred_nb))\n"
